<%= turbo_frame_tag task do %>
<ol class="relative border-l border-gray-200">
  <li class="mb-5 ml-6">
      <span class="flex absolute -left-3 justify-center items-center w-6 h-6 bg-blue-200 rounded-full ring-8 ring-natural">
          <i class="fa-solid fa-calendar text-xs text-blue-800"></i>
      </span>
      <h3 class="flex items-center mb-1 text-lg font-semibold text-gray-900 dark:text-white"><%= task.title %><span class="bg-blue-100 text-blue-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ml-3"><%= task.category %></span></h3>
      <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"><%= task.time_start.strftime( "%H:%M" ) %>-<%= task.time_end.strftime( "%H:%M" ) %></time>
      <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400"><%= task.percent %>%</p>
  </li>
  </ol>
<% end %>
