<% if task.task_categories[0].category.color === "blue" %>
  <span class="bg-blue-100 text-blue-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ml-3"><%= task.category_name %></span>
<% elsif task.task_categories[0].category.color === "red" %>
  <span class="bg-red-100 text-red-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ml-3"><%= task.category_name %></span>
<% elsif task.task_categories[0].category.color === "orange" %>
  <span class="bg-orange-100 text-orange-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ml-3"><%= task.category_name %></span>
<% elsif task.task_categories[0].category.color === "yellow" %>
  <span class="bg-yellow-100 text-yellow-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ml-3"><%= task.category_name %></span>
<% elsif task.task_categories[0].category.color === "green" %>
  <span class="bg-green-100 text-green-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ml-3"><%= task.category_name %></span>
<% elsif task.task_categories[0].category.color === "purple" %>
  <span class="bg-purple-100 text-purple-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ml-3"><%= task.category_name %></span>
<% else %>
  <span class="bg-gray-100 text-gray-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ml-3"><%= task.category_name %></span>
<% end %>