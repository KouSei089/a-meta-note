<div>
  <h1 class="font-bold text-4xl ml-12">Schedules Index</h1>
  <div class="flex justify-center">
    <div class="grid grid-cols-3 gap-3">
      <div class="card w-96 py-32 bg-base-100 shadow-xl mx-5 mt-5">
          <div class="card-body items-center text-center">
            <h2 class="card-title">ここから投稿する</h2>
            <p>If a dog chews shoes whose shoes does he choose?</p>
            <div class="card-actions">
              <button class="btn btn-primary">656565</button>
            </div>
          </div>
        </div>
      <% @schedules.each do |schedule| %>
        <div class="card w-96 py-32 bg-base-100 shadow-xl mx-5 mt-5">
          <div class="card-body items-center text-center">
            <h2 class="card-title"><%= schedule.id %></h2>
            <p>If a dog chews shoes whose shoes does he choose?</p>
            <div class="card-actions">
              <button class="btn btn-primary"><%= schedule.title %></button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
